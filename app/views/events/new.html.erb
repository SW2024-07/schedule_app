<h1>新しいイベントを追加</h1>

<%= form_with(model: [@user_calendar, @event], local: true) do |form| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.datetime_local_field :start_time %>
  </div>

  <div class="field">
    <%= form.label :end_time %>
    <%= form.datetime_local_field :end_time %>
  </div>

  <div class="actions">
    <%= form.submit 'イベントを作成' %>
  </div>
<% end %>

<%= link_to '戻る', user_calendar_path(@user_calendar) %>
