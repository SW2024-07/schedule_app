<h1>Search Results</h1>

<% if @results.any? %>
  <ul>
    <% @results.each do |result| %>
      <% if result.is_a?(User) %>
        <li><%= result.username %></li> <!-- Userモデルの場合 -->
      <% elsif result.is_a?(UserCalendar) %>
        <li><%= result.title %></li> <!-- UserCalendarモデルの場合 -->
      <% elsif result.is_a?(Comment) %>
        <li><%= result.content %></li> <!-- Commentモデルの場合 -->
      <% end %>
    <% end %>
  </ul>
<% else %>
  <p>No results found.</p>
<% end %>
<%= link_to 'Back', request.referer || posts_path %>