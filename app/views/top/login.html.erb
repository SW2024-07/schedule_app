<h1>ログイン</h1>
<%= form_with url: login_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :email, 'メールアドレス' %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password, 'パスワード' %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit 'ログイン' %>
  </div>
<% end %>
<%= link_to '新規登録はこちら', new_user_path %>
